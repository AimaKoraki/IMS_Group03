<Window x:Class="IMS_Group03.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IMS_Group03"
        mc:Ignorable="d"
        Title="Inventory Management System - IMS Group03" 
    Height="850" Width="1500"
        WindowStartupLocation="CenterScreen"
        Background="#111111"
        AllowsTransparency="False"
        WindowStyle="SingleBorderWindow">

    <Window.Resources>
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="buttonBorder" Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="Center" Margin="10,0,0,0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3C3C3C"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#505050"/>
                </Trigger>
                <Trigger Property="Tag" Value="Selected">
                    <!-- Used to highlight selected button -->
                    <Setter Property="Background" Value="#007ACC"/>
                    <!-- Example selected color -->
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <!-- Sidebar width -->
            <ColumnDefinition Width="*"/>
            <!-- Main content width -->
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="#2B2B2B" CornerRadius="0,20,20,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Profile Area -->
                    <RowDefinition Height="*"/>
                    <!-- Navigation Buttons -->
                    <RowDefinition Height="Auto"/>
                    <!-- Logout Area -->
                </Grid.RowDefinitions>

                <!-- Profile Area -->
                <StackPanel Grid.Row="0" Margin="20,30,20,30" HorizontalAlignment="Center">
                    <Ellipse Width="100" Height="100" Fill="#555555" Stroke="#777777" StrokeThickness="2"/>
                    <TextBlock Text="Your Company"
                               Foreground="White" TextAlignment="Center" FontSize="20" FontWeight="SemiBold"
                               HorizontalAlignment="Center" Margin="0,15,0,5"/>
                    <TextBlock Text="IMS Portal"
                               Foreground="#AAAAAA" TextAlignment="Center" FontSize="14"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Navigation Buttons -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="10,0,10,0">
                    <StackPanel VerticalAlignment="Top" Margin="0,10,0,10">
                        <Button x:Name="DashboardNavButton" Style="{StaticResource SidebarButtonStyle}" Content="Dashboard" Click="DashboardNavButton_Click"/>

                        <TextBlock Text="CORE MODULES" Foreground="#888888" FontSize="12" FontWeight="SemiBold" Margin="20,20,0,5" />
                        <Button x:Name="ProductsNavButton" Style="{StaticResource SidebarButtonStyle}" Content="Items (Products)" Click="ProductsNavButton_Click"/>
                        <Button x:Name="SuppliersNavButton" Style="{StaticResource SidebarButtonStyle}" Content="Suppliers" Click="SuppliersNavButton_Click"/>
                        <Button x:Name="PurchaseOrdersNavButton" Style="{StaticResource SidebarButtonStyle}" Content="Purchase Orders" Click="PurchaseOrdersNavButton_Click"/>
                        <Button x:Name="StockMovementsNavButton" Style="{StaticResource SidebarButtonStyle}" Content="Stock Movements" Click="StockMovementsNavButton_Click"/>

                        <TextBlock Text="Analysis" Foreground="#888888" FontSize="12" FontWeight="SemiBold" Margin="20,20,0,5" />
                        <Button x:Name="ReportsNavButton" Style="{StaticResource SidebarButtonStyle}" Content="Reports" Click="ReportsNavButton_Click"/>
                        <Button x:Name="UserSettingsNavButton" Style="{StaticResource SidebarButtonStyle}" Content="User Settings" Click="UserSettingsNavButton_Click"/>
                        <!-- You can add User Settings or other utility items here if needed later -->
                        <!--
                        <TextBlock Text="Settings & Help" Foreground="#888888" FontSize="12" FontWeight="SemiBold" Margin="20,20,0,5" TextTransform="Uppercase"/>
                        <Button x:Name="UserSettingsNavButton" Style="{StaticResource SidebarButtonStyle}" Content="User Settings" Click="UserSettingsNavButton_Click"/>
                        <Button x:Name="UserGuideNavButton" Style="{StaticResource SidebarButtonStyle}" Content="User Guide" Click="UserGuideNavButton_Click"/>
                        -->
                    </StackPanel>
                </ScrollViewer>

                <!-- Logout -->
                <Button Grid.Row="2" x:Name="LogoutButton"
                        Style="{StaticResource SidebarButtonStyle}"
                        Content="Logout"
                        Foreground="#FF6347" 
                        Margin="10,10,10,20"
                        Click="LogoutButton_Click">
                    <Button.Resources>
                        <!-- Removed the problematic style -->
                    </Button.Resources>
                </Button>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Border Grid.Column="1" Background="#1E1E1E" CornerRadius="20,0,0,20" Margin="10,0,0,0">
            <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" JournalOwnership="OwnsJournal"/>
        </Border>
    </Grid>
</Window>