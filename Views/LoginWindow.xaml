<Window x:Class="IMS_Group03.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IMS_Group03"
        mc:Ignorable="d"
        Title="Login - Inventory Management System" Height="614" Width="455"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" AllowsTransparency="False"
        WindowStyle="SingleBorderWindow"
        Background="{StaticResource PrimaryBackgroundBrush}"
        KeyDown="Window_KeyDown">

    <!-- MODIFIED: Applied LoginPanelStyle -->
    <Border Style="{StaticResource LoginPanelStyle}" VerticalAlignment="Center">
        <StackPanel>
            <!-- MODIFIED: Applied LoginTitleStyle -->
            <TextBlock Text="Store Management" Style="{StaticResource LoginTitleStyle}"/>
            <!-- MODIFIED: Applied LoginSubtitleStyle -->
            <TextBlock Text="Sign in to your account" Style="{StaticResource LoginSubtitleStyle}"/>

            <!-- MODIFIED: Applied LabelStyleDark -->
            <TextBlock Text="Username" Style="{StaticResource LabelStyleDark}"/>
            <!-- MODIFIED: Applied TextBoxDarkStyle -->
            <TextBox x:Name="UsernameTextBox" Style="{StaticResource TextBoxDarkStyle}" Margin="0,0,0,15" TabIndex="0"/>

            <!-- MODIFIED: Applied LabelStyleDark -->
            <TextBlock Text="Password" Style="{StaticResource LabelStyleDark}"/>
            <!-- MODIFIED: Applied PasswordBoxDarkStyle -->
            <PasswordBox x:Name="PasswordInputBox" Style="{StaticResource PasswordBoxDarkStyle}" Margin="0,0,0,15" TabIndex="1"/>

            <!-- MODIFIED: Applied DangerBrush -->
            <TextBlock x:Name="ErrorMessageText" Foreground="{StaticResource DangerBrush}" TextWrapping="Wrap" MinHeight="20" Margin="0,0,0,10" HorizontalAlignment="Center" FontWeight="SemiBold"/>
            <!-- Note: FontSize from TextBlock default or you might want to create a specific ErrorMessageTextStyle -->

            <!-- MODIFIED: Applied ActionButtonDarkStyle (or SuccessActionButtonStyle) -->
            <Button x:Name="LoginBtn" Content="Login" Style="{StaticResource ActionButtonDarkStyle}" Click="LoginButton_Click" Margin="0,10,0,8" TabIndex="2"/>
            <!-- MODIFIED: Applied SecondaryActionButtonStyle -->
            <Button Content="Cancel" Style="{StaticResource SecondaryActionButtonStyle}" Click="CancelButton_Click" TabIndex="3"/>
        </StackPanel>
    </Border>
</Window>